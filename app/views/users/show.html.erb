<section class="sect1 col-9 p-0">
    <div class="d-flex tab">
        <%= link_to 'Movie lines', lines_path, class: "tt-lk" %>    
    </div>
    <div class="line-form m-3 p-3 bg-white">
        <h4>Post Your favourite movie line</h4>
        <%= form_with model: Line.new do |f|%>
            <div class="form-group">
                <%= f.text_area :text, autofocus: true, autocomplete: "name" , :class=>"form-control"%>
            </div>
           <div class="actions">
                <%= f.submit "Post", :class=>"btn btn-primary" %>
            </div>
        <%end%>
    </div>
    <div class="movie-lines m-3 p-3 bg-white">
     <%= render partial: 'lines/line', collection:  @lines %>
    </div>      
</section>
 <section class="sect2  col-3 p-0">
 <div class="d-flex tab">
        <p> Who to follow</p>
    </div>
     <div class="aside">
        <% User.all.each do  |user|%>
            <div class="d-flex flex-column bg-light mb-2 p-1">
            <p class="font-weight-bold m-0 text-dark"><%= user.username %></p>
            <p class="font-weight-bold m-0 text-dark"><%= user.username %></p>
            </div>
        <% end %>
    </div>


    </div>
</section>

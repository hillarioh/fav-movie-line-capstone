 
 <section class="sect col-9 p-0">
    <div class="tab m-3">
        <h3>Top Users </h3>
         <% @users.each do |user| %>
            <div class="d-flex  align-items-center bg-white mb-2 p-1">
                <div class="mr-2">
                    <%= image_tag user.profile_pic,:class=> 'prof'%>
                </div>
                <div class="d-flex justify-content-center flex-column">
                    <h4 class="font-weight-bold m-0 text-dark"><%= link_to user.fullname, user_path(user), :class=>"ulink" %></h4>
                    <h6 class=" m-0 text-dark">@<%= link_to user.username, user_path(user) ,:class=>"uslink" %></h6>
                </div>
                <% if check_status(user) %>
                    <div class="ml-auto mr-2">
                    <% follow_params = { followed_id: user.id, follower_id: current_user.id } %>
                        <%= link_to followings_path(follow_params), method: :post  do%>
                                <span>
                                    <i class="fas fa-plus add"></i>
                                </span>
                        <% end %>
                    </div>
                <% end %>
            </div>
        <% end %>
    </div>
         
</section>
 <section class="sect2  col-3 p-0">
    <div class="tab "><h4 class="m-0">Who to follow</h4></div>
     <div class="aside">
        <% list_to_follow.each do  |user|%>
            <div class="d-flex align-items-center bg-light mb-2 p-1">
                <div class="mr-2">
                    <%= image_tag user.profile_pic,:class=> 'img-fluid'%>
                </div>
                <div class="flex-column">
                    <p class="font-weight-bold m-0 text-dark"><%= user.fullname %></p>
                    <p class=" m-0 text-dark">@<%= user.username %></p>
                </div>
                <div class="ml-auto mr-2">
                <% add_params = {followed_id: user.id, follower_id: current_user.id } %>
                    <%= link_to followings_path(add_params), method: :post do %>
                            <span>
                                <i class="fas fa-plus add"></i>
                            </span>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>


    </div>
</section>